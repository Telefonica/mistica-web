{
    "javascript.validate.enable": true,
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "search.exclude": {
        "**/node_modules": true,
        "**/flow-defs": true,
        "**/flow-typed": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        // added to avoid 100% CPU usage in VSCode
        "**/src/generated/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        // added to avoid 100% CPU usage in VSCode
        "**/src/generated/**": true
    },
    // required by Markdown TOC extension
    "files.eol": "\n"
}
