{
    "name": "@telefonica/mistica",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "main": "dist/index.js",
    "src": "src/index.js",
    "files": [
        "esm/*",
        "dist/*",
        "css/*"
    ],
    "scripts": {
        "test": "jest",
        "prettier-check": "prettier --check '**/*.js' '**/*.json'",
        "prebuild": "yarn clean",
        "build": "babel src --out-dir dist --ignore \"**/__tests__/**\" --ignore \"**/__stories__/**\" --ignore \"**/__type_tests__/**\"",
        "watch": "yarn build --watch",
        "clean": "rimraf dist",
        "prepublishOnly": "yarn build && yarn flow && yarn test"
    },
    "browserslist": [
        "chrome >= 36",
        "firefox >= 67",
        "safari >= 10.1",
        "edge >= 17",
        "ios_saf >= 10"
    ],
    "prettier": {
        "printWidth": 110,
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": false,
        "proseWrap": "always",
        "overrides": [
            {
                "files": "package.json",
                "options": {
                    "printWidth": 250
                }
            },
            {
                "files": "*.md",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.8.3",
        "@babel/preset-env": "^7.8.4",
        "@babel/preset-flow": "^7.8.3",
        "@babel/preset-react": "^7.8.3",
        "@testing-library/jest-dom": "^5.8.0",
        "@testing-library/react": "^10.0.4",
        "@testing-library/user-event": "^10.3.4",
        "flow-bin": "^0.125.1",
        "flow-typed": "^3.1.0",
        "husky": ">=4",
        "jest": "^26.0.1",
        "lint-staged": ">=10",
        "prettier": "^2.0.5",
        "react": "16.11.0",
        "react-dom": "16.11.0",
        "react-router-dom": "^5.1.2",
        "rimraf": "^3.0.1"
    },
    "dependencies": {
        "@juggle/resize-observer": "^3.1.3",
        "@tef-novum/webview-bridge": "^2.14.6",
        "classnames": "^2.2.6",
        "focus-trap-react": "^4.0.0",
        "jss": "^10.1.1",
        "jss-plugin-camel-case": "^10.1.1",
        "jss-plugin-default-unit": "^10.1.1",
        "jss-plugin-nested": "^10.1.1",
        "jss-plugin-rule-value-function": "^10.1.1",
        "jss-plugin-vendor-prefixer": "^10.1.1",
        "lodash": "^4.17.15",
        "react-autosuggest": "^9.4.3",
        "react-jss": "^10.1.1",
        "react-transition-group": "^2.5.3",
        "semver-compare": "^1.0.0"
    },
    "peerDependencies": {
        "react": ">=16.11",
        "react-dom": "=>16.11",
        "react-router-dom": ">=5.1"
    },
    "publishConfig": {
        "registry": "https://npm.tuenti.io"
    },
    "sideEffects": [
        "*.css"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md}": "prettier --write"
    }
}
