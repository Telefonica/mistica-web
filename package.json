{
    "name": "@telefonica/mistica",
    "version": "1.1.0",
    "license": "UNLICENSED",
    "main": "dist/index.js",
    "files": [
        "dist/*",
        "css/*"
    ],
    "scripts": {
        "test": "jest --config jest.unit.config.js",
        "test-acceptance": "cross-env SCREENSHOT=1 HEADLESS=1 yarn test-acceptance-ui",
        "test-acceptance-ui": "jest --config jest.acceptance.config.js",
        "prettier-check": "prettier --check \"**/*.js\" \"**/*.json\"",
        "lint": "eslint --report-unused-disable-directives .",
        "prebuild": "yarn clean",
        "build": "babel src --out-dir dist --ignore \"**/__acceptance_tests__/**\" --ignore \"**/__screenshot_tests__/**\" --ignore \"**/__tests__/**\" --ignore \"**/__stories__/**\" --ignore \"**/__type_tests__/**\"",
        "postbuild": "flow-copy-source -v -i \"**/__acceptance_tests__/**\" -i \"**/__screenshot_tests__/**\" -i \"**/__tests__/**\" -i \"**/__stories__/**\" -i \"**/__type_tests__/**\" src dist",
        "watch": "yarn build --watch",
        "clean": "rimraf dist",
        "ci": "yarn build && yarn storybook-static && yarn prettier-check && yarn flow check && yarn lint && yarn test --ci && yarn test-acceptance --ci",
        "prepublishOnly": "node scripts/prepublish-only.js",
        "storybook": "start-storybook -p 6006",
        "playroom": "playroom start",
        "now-build": "yarn storybook-static && ./node_modules/.bin/playroom build && cp img/favicon.ico public/",
        "storybook-static": "rimraf public && yarn build-storybook -o public --quiet",
        "up-chromium": "docker-compose up -d chromium"
    },
    "browserslist": [
        "chrome >= 36",
        "firefox >= 67",
        "safari >= 10.1",
        "edge >= 17",
        "ios_saf >= 10"
    ],
    "prettier": {
        "printWidth": 110,
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": false,
        "proseWrap": "always",
        "overrides": [
            {
                "files": "package.json",
                "options": {
                    "printWidth": 250
                }
            },
            {
                "files": ".ci.yml",
                "options": {
                    "printWidth": 150
                }
            },
            {
                "files": "*.md",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.8.3",
        "@babel/plugin-transform-property-literals": "^7.10.1",
        "@babel/preset-env": "^7.8.4",
        "@babel/preset-flow": "^7.8.3",
        "@babel/preset-react": "^7.8.3",
        "@storybook/addon-actions": "^5.3.19",
        "@storybook/addon-links": "^5.3.19",
        "@storybook/addon-storysource": "^5.3.19",
        "@storybook/addons": "^5.3.19",
        "@storybook/components": "^5.3.19",
        "@storybook/react": "^5.3.19",
        "@storybook/theming": "^5.3.19",
        "@testing-library/jest-dom": "^5.8.0",
        "@testing-library/react": "^10.0.4",
        "@testing-library/user-event": "^10.3.4",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-flow-react-proptypes": "^26.0.0",
        "babel-plugin-lodash": "^3.3.4",
        "cross-env": "^7.0.2",
        "eslint": "^7.1.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-flowtype": "^5.1.3",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.13.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.20.0",
        "eslint-plugin-react-hooks": "^4.0.4",
        "eslint-plugin-testing-library": "^3.1.4",
        "flow-bin": "^0.125.1",
        "flow-copy-source": "^2.0.9",
        "flow-typed": "^3.1.0",
        "husky": ">=4",
        "jest": "^26.0.1",
        "jest-environment-puppeteer": "^4.4.0",
        "jest-image-snapshot": "^4.0.2",
        "jimp": "^0.13.0",
        "lint-staged": ">=10",
        "node-fetch": "^2.6.0",
        "playroom": "^0.21.1",
        "pptr-testing-library": "^0.6.0",
        "prettier": "^2.0.5",
        "prop-types": "^15.7.2",
        "puppeteer": "^3.3.0",
        "react": "16.11.0",
        "react-dom": "16.11.0",
        "react-router-dom": "^5.1.2",
        "rimraf": "^3.0.1"
    },
    "dependencies": {
        "@juggle/resize-observer": "^3.1.3",
        "@tef-novum/webview-bridge": "^2.14.6",
        "@telefonica/libphonenumber": "^2.7.5",
        "classnames": "^2.2.6",
        "focus-trap-react": "^4.0.0",
        "jss": "^10.1.1",
        "jss-plugin-camel-case": "^10.1.1",
        "jss-plugin-default-unit": "^10.1.1",
        "jss-plugin-nested": "^10.1.1",
        "jss-plugin-rule-value-function": "^10.1.1",
        "jss-plugin-vendor-prefixer": "^10.1.1",
        "lodash": "^4.17.15",
        "react-autosuggest": "^9.4.3",
        "react-jss": "^10.1.1",
        "react-transition-group": "^2.5.3",
        "semver-compare": "^1.0.0",
        "static-server": "^2.2.1"
    },
    "peerDependencies": {
        "react": ">=16.11",
        "react-dom": "=>16.11",
        "react-router-dom": ">=5.1"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "sideEffects": [
        "*.css"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md,yml,yaml}": "prettier --write"
    }
}
