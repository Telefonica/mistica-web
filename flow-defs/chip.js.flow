// @flow

import * as React from "react";
import type { IconProps } from "./utils/types";
declare type ChipBaseProps = {
  children: string,
  Icon?: React.ComponentType<IconProps>,
};
declare type SimpleChipProps = { ...$Exact<ChipBaseProps> };
declare type ClosableChipProps = {
  ...$Exact<ChipBaseProps>,
  onClose: () => void,
};
declare type ControlledToggleChipProps = {
  ...$Exact<ChipBaseProps>,
  checked: boolean,
  onChange: (value: boolean) => void,
};
declare type UncontrolledToggleChipProps = {
  ...$Exact<ChipBaseProps>,
  defaultChecked?: boolean,
  onChange: (value: boolean) => void,
};
declare type ChipProps =
  | SimpleChipProps
  | ClosableChipProps
  | ControlledToggleChipProps
  | UncontrolledToggleChipProps;
declare var Chip: React.ComponentType<ChipProps>;
declare export default typeof Chip;
