// @flow

import type { DataAttributes } from "./types";

/**
 * Returns true if provided type is supported <input> type
 */
declare export var isInputTypeSupported: (type: string) => boolean;
declare export var cancelEvent: (event: Event | SyntheticEvent<any>) => void;
declare export var createChangeEvent: (
  target: HTMLInputElement,
  value: string
) => SyntheticEvent<HTMLInputElement>;
declare export var addPassiveEventListener: (
  el: EventTarget,
  eventName: string,
  listener: (e: any) => void
) => void;
declare export var removePassiveEventListener: (
  el: EventTarget,
  eventName: string,
  listener: (e: any) => void
) => void;
/**
 * Prefixes given attributes with `data-`
 *
 * For example: `{foo: 'bar'}` => `{data-foo: 'bar'}`
 */
declare export var getPrefixedDataAttributes: (
  attrs?: DataAttributes | void
) => DataAttributes;
